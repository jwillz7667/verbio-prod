{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./backend/dist",
    "rootDir": "./backend/src",
    "baseUrl": "./backend",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "@config/*": ["src/config/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@middleware/*": ["src/middleware/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["backend/src/**/*"],
  "exclude": ["backend/node_modules", "backend/dist", "backend/**/*.test.ts", "backend/**/*.spec.ts"]
}