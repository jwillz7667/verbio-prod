{
  "name": "verbio",
  "version": "1.0.0",
  "description": "Enterprise-grade AI voice agent platform for small businesses",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "db:init": "cd backend && npm run db:init",
    "db:migrate": "cd backend && npm run db:migrate",
    "docker:build": "docker build -t verbio-backend ./backend",
    "docker:run": "docker run -p 8080:8080 --env-file .env verbio-backend",
    "gcloud:deploy": "cd backend && gcloud run deploy verbio-backend --source . --region us-central1 --allow-unauthenticated --port 8080 --memory 1Gi --max-instances 10 --concurrency 80",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "express": "^4.18.2",
    "@supabase/supabase-js": "^2.45.0",
    "twilio": "^4.20.0",
    "openai": "^4.28.0",
    "stripe": "^14.7.0",
    "ws": "^8.16.0",
    "ffmpeg-static": "^5.2.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.2.0",
    "csurf": "^1.11.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.13.0",
    "@sentry/node": "^8.9.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/cors": "^2.8.17",
    "@types/cookie-parser": "^1.4.6",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verbio/verbio-app.git"
  },
  "keywords": [
    "ai",
    "voice",
    "agent",
    "twilio",
    "openai",
    "realtime",
    "supabase"
  ],
  "author": "Verbio Team",
  "license": "MIT"
}